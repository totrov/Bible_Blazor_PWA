@inject Bible_Blazer_PWA.Parameters.DbParametersFacade DbParameters;

@{
    var style = InteractionModel != null
        ? $"background-color:{DbParameters.ParametersModel.ToolsBg}; color:white; height:{PctSize}!important; transition:height 0.3s;"
        : $"background-color:{DbParameters.ParametersModel.ToolsBg}; color:white; height:35px!important";
}
<MudToolBar Style="@style">
    @if (InteractionModel != null)
    {
        <MudIconButton DisableRipple="true" Icon="@Icons.Material.TwoTone.ArrowBack" Disabled="!HasPrevious" OnClick="Interaction.GoToPrevious" />
        <MudIconButton DisableRipple="true" Icon="@Icons.Material.TwoTone.ArrowForward" Disabled="!HasNext" OnClick="Interaction.GoToNext" />
        <MudSpacer />
        <MudIconButton DisableRipple="true" Icon="UnfoldLessDouble" OnClick="() => Interaction.Shrink(this, 2)" />
        <MudIconButton DisableRipple="true" Icon="UnfoldMoreDouble" OnClick="() => Interaction.Enlarge(this, 2)" />
        <MudIconButton DisableRipple="true" Icon="@Icons.Material.Filled.UnfoldLess" OnClick="() => Interaction.Shrink(this, 1)" />
        <MudIconButton DisableRipple="true" Icon="@Icons.Material.Filled.UnfoldMore" OnClick="() => Interaction.Enlarge(this, 1)" />
        <MudIconButton DisableRipple="true" Icon="@Icons.Material.Filled.Close" OnClick="InteractionModel.Close" />
    }
    else
    {
        <GlobalMenu></GlobalMenu>
    }

</MudToolBar>

@code {
    #region Parameters

    [Parameter]
    public IInteractionModel InteractionModel { get; set; }
    
    public string PctSize { get; set; }

    #endregion
    #region Props

    public bool HasPrevious { get; set; }
    public bool HasNext { get; set; }

    #endregion

    #region SVG
    private const string UnfoldLessDouble = "<g><rect fill=\"none\" height=\"24\" width=\"24\"></rect></g><g><g><g><path d=\"M12,7.83L15.17,11l1.41-1.41L12,5L7.41,9.59L8.83,11L12,7.83z M12,2.83L15.17,6l1.41-1.41L12,0L7.41,4.59L8.83,6L12,2.83 z M12,21.17L8.83,18l-1.41,1.41L12,24l4.59-4.59L15.17,18L12,21.17z M12,16.17L8.83,13l-1.41,1.41L12,19l4.59-4.59L15.17,13 L12,16.17z\"></path></g></g></g>";
    private const string UnfoldMoreDouble = "<g><rect fill=\"none\" height=\"24\" width=\"24\"></rect></g><g><g><g><path d=\"M12,7.83L15.17,11l1.41-1.41L12,5L7.41,9.59L8.83,11L12,7.83z M12,2.83L15.17,6l1.41-1.41L12,0L7.41,4.59L8.83,6L12,2.83 z M12,21.17L8.83,18l-1.41,1.41L12,24l4.59-4.59L15.17,18L12,21.17z M12,16.17L8.83,13l-1.41,1.41L12,19l4.59-4.59L15.17,13 L12,16.17z\"></path></g></g></g>";
    #endregion

    protected override void OnInitialized()
    {
        Interaction.OnModelChanged += () => HasPrevious = Interaction.HasPrevious;
        Interaction.OnModelChanged += () => HasNext = Interaction.HasNext;
    }
}
